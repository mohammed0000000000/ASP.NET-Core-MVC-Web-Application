@model IEnumerable<TechWebApplication.Services.ViewModel.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateCategory" asp-controller="Category">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThumbnailImagePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailImagePath)
            </td>
            <td>
                    <a asp-action="UpdateCategory" asp-route-id="@item.Id"> Edit </a> |
                    <a asp-action="DetailCategory" asp-route-id="@item.Id"> Details </a> |
                    <a asp-action="DeleteCategory" asp-route-id="@item.Id"> Delete </a> |
                    <a asp-action="Index" asp-controller="CategoryItem" asp-route-id="@item.Id"> Update Items </a> 
            </td>
        </tr>
}
    </tbody>
</table>
