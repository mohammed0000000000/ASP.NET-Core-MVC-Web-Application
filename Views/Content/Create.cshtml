@model TechWebApplication.Services.ViewModel.ContentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ContentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            @{
                if (ViewBag.CategoryItemMediaType == "Article") {
                    <div class="form-group">
                        <label asp-for="HTMLContent" class="control-label"></label>
                        <input asp-for="HTMLContent" class="form-control" />
                        <span asp-validation-for="HTMLContent" class="text-danger"></span>
                    </div>
                } else {
                    <div class="form-group">
                        <label asp-for="VideoLink" class="control-label"></label>
                        <input asp-for="VideoLink" class="form-control" />
                        <span asp-validation-for="VideoLink" class="text-danger"></span>
                     </div>
                }
            }
            
            <div class="form-group" hidden>
                <label asp-for="CategoryItemId" class="control-label"></label>
                <input asp-for="CategoryItemId" class="form-control" value="@ViewBag.CategoryItemId" />
                <span asp-validation-for="CategoryItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
