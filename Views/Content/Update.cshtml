@model TechWebApplication.Services.ViewModel.ContentViewModel

@{
    ViewData["Title"] = "Update";
}

<h2 class="my-4 text-primary">Update Content For Item</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label mb-1"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            @{
                if (ViewBag.CategoryItemMediaType == "Article") {
                    <div class="form-group mb-3">
                        <label asp-for="HTMLContent" class="control-label mb-1"></label>
                        <textarea asp-for="HTMLContent" class="form-control" rows="6" value="@Model.HTMLContent"> </textarea>
                        <span asp-validation-for="HTMLContent" class="text-danger"></span>
                    </div>
                } else {
                    <div class="form-group mb-3">
                        <label asp-for="VideoLink" class="control-label mb-1"></label>
                        <input asp-for="VideoLink" class="form-control" value="@Model.VideoLink" />
                        <span asp-validation-for="VideoLink" class="text-danger"></span>
                    </div>
                }
            }          
            <div class="form-group" hidden>
                <label asp-for="CategoryItemId" class="control-label"></label>
                <input asp-for="CategoryItemId" class="form-control" value="@Model.CategoryItemId" />
                <span asp-validation-for="CategoryItemId" class="text-danger"></span>
            </div>
            <div class="form-group text-end">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="my-3">
    <a asp-action="Index" asp-controller="CategoryItem" asp-route-id="@ViewBag.CategoryId" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
