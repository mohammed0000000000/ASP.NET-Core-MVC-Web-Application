@model List<TechWebApplication.Services.ViewModel.CategoryViewModel>

<!-- Hero Section -->
<div class="hero section" style="height:80vh;">
	<img class="img-fluid h-100" src="~/images/HeroImage.jpeg" alt="Alternate Text" />
	<div class="hero-heading">
		<h2 class="text-white fs-2">Learn Software Engineering at <strong class="text-cyan">TechTree</strong></h2>
		<a id="HeroRegisterButton" class="btn btn-outline-info btn-lg hero-register-button mt-2" data-bs-toggle="modal" data-bs-target="#UserRegistrationModal">Register</a>
	</div>
</div>
<hr class="section-divider" />
<div id="courses" class="course section">
    <h3 class="section-header text-dark"><i class="fas fa-laptop-code mr-2 text-info me-2"></i>Online Courses and Articles</h3>
    @{
        if(Model?.Count() > 0) {
            <partial name="_RenderCardRowPartial" model="@Model"/>
        } else {
            <p class="lead">No Course To Publish</p>
        }
    }
	
</div>
<hr class="section-divider"/>
<div id="contact-us" class="contact section">
    <h3 class="section-header text-dark"><i class="fas fa-phone-alt mr-2 text-info me-2"></i>Contact Us</h3>
    <div class="">
        Email us any questions or inquiries or call 518-387-9999. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3">
        <div class="col-md-6">
            <form>
                <input type="hidden" />
                <div class="form-group mb-3">
                    <label for="Name" class="control-label mb-1">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group mb-3">
                    <label for="Email" class="control-label mb-1">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group mb-3">
                    <label for="Subject" class="control-label mb-1">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group mb-3">
                    <label for="MessageBody" class="control-label mb-1">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group text-end">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
    </div>
</div>
<hr class="section-divider" />
<div id="about-us" class="about-us section">
    <h3 class="section-header text-dark"><i class="fas fa-chalkboard-teacher mr-2 text-info me-2"></i>About Us</h3>
    <div class="mt-3 mb-5">
        <div class="">
            <p>
                <strong>TechTree</strong> provides articles and courses on programming topics. We started in 1998 and continue to provide high quality Tech content to our members.
            </p>
        </div>
    </div>
</div>
