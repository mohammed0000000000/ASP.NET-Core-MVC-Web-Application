@model List<TechWebApplication.Services.ViewModel.CategoryViewModel>
<div class="content d-flex justify-content-between flex-row">
	@{
		foreach (var item in @Model) {
			<div class="card p-2 text-decoration-none lh-base text-black card-click" style="width: 18rem; height:16rem;">
				<input hidden value="@item.Id" />
				<img src="~/images/@item.ThumbnailImagePath" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@item.Title</h5>
					<p class="card-text">@item.Description</p>
				</div>
			</div>
		}
	}
</div>
@section Scripts {
	 <script src="~/js/registercard.js"></script>
}