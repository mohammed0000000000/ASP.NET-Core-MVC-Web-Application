@model List<TechWebApplication.Services.ViewModel.CategoryViewModel>
@using TechWebApplication.Services.ViewModel;
<h3 class="my-5 text-primary text-center">Add Members to Category</h3>
<form id="MembersToCategory" asp-action="Index">
    <div class="row my-3">
        <div class="col-md-4">
            <div class="form-group">
                <h4 class="my-3 border-secondary p-2 border-bottom border-2" style="width:fit-content;">Category</h4>
                <select id="CategoryId" name="CategoryId" class="form-control border-secondary rounded-2 border border-2">
                    <option value="0">--Please choose a Category--</option>
                    @{
                        if (Model is not null)
                        {
                            foreach (var item in Model)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        }
                     }
                </select>
            </div>
        </div>
    </div>
    <div id="alert_placeholder my-2">
    </div>
    <div class="row my-3">
        <div class="col-md-10">
            <h4 class="my-3 border-secondary p-2 border-bottom border-2" style="width:fit-content;">Members</h4>
            <div class="form-group">
                <div id="UsersCheckList">
                    <partial name="_UsersListViewPartial" model="new UserCategoryListViewModel(){CategoryId = 0, Users = null,UsersSelected = null}"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        </div>
    </div>

    <div class="row my-3">
        <div class="col-md-10">
            <div class="form-group text-end">
                <button type="button" id="SaveSelectedUsers" name="SaveSelectedUsers" class="btn btn-outline-info">Save</button>
            </div>
        </div>
    </div>
</form>
<div class="progress collapse">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info text-white" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%; height:100%;">
        <span style="font-size: 2rem;">Saving Data...</span>
    </div>
</div>
<div class="col-md-12">
    <div class="alert alert-success alert-dismissible collapse text-center" style="font-size: 2rem;" role="alert">
        The Data has been saved successfully!!
    </div>
</div>

@section Scripts{
    <script src="~/js/UserToCategory.js"></script>
    <script src="~/js/BootstrapAlert.js"></script>
}